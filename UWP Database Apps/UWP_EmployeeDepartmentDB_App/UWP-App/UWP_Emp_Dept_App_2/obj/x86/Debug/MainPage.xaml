<Page
    x:Class="UWP_Emp_Dept_App_2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Emp_Dept_App_2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Black">
        <!--<TextBlock Text="Employee Data" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" Foreground="MediumSpringGreen"/>-->
        <RelativePanel>
            <StackPanel Orientation="Vertical" Spacing="10">
                <TextBlock Text="Employee Data" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" Foreground="MediumSpringGreen"/>

                <ListView x:ConnectionId='2' Name="empListView" Padding="5" BorderBrush="MediumSpringGreen" BorderThickness="2" Foreground="MediumSpringGreen">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Padding="10" Spacing="10">
                                <TextBlock Text="Name" 
                                           Width="150"
                                           FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="Location" 
                                           Width="150"
                                           FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="BirthDate" 
                                           Width="150"
                                           FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="HireDate" 
                                           Width="150"
                                           FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="JobTitle" 
                                            Width="150"
                                            FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="EmailId" 
                                            Width="250"
                                            FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="Salary" 
                                            Width="150"
                                            FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="DeptName" 
                                            Width="150"
                                            FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="DeptType" 
                                            Width="150"
                                            FontWeight="Bold"
                                           FontSize="20"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='5' Orientation="Horizontal" Padding="10" Spacing="10">
                                <TextBlock x:ConnectionId='6'
                                    Name="empName"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                                           />
                                <TextBlock x:ConnectionId='7'
                                    Name="empLocation"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                                               />
                                <TextBlock x:ConnectionId='8'
                                    Name="empBirthDate"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                                                   />
                                <TextBlock x:ConnectionId='9'
                                    Name="empHireDate"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                                                  />
                                <TextBlock x:ConnectionId='10'
                                    Name="empJobTitle"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                                               />
                                <TextBlock x:ConnectionId='11'
                                    Name="empEmailId"
                                    Width="250"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                    Padding="5"
                                                              />
                                <TextBlock x:ConnectionId='12'
                                    Name="empSalary"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                                             />
                                <TextBlock x:ConnectionId='13'
                                    Name="deptName"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                                            />
                                <TextBlock x:ConnectionId='14'
                                    Name="deptType"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    FontSize="15"
                                    Foreground="MediumSpringGreen"
                                                            />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </RelativePanel>
    </Grid>
    
</Page>

