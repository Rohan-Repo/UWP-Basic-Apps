<Page
    x:Class="UWP_Emp_Dept_App_2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Emp_Dept_App_2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Black">
        <!--<TextBlock Text="Employee Data" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" Foreground="MediumSpringGreen"/>-->
        <RelativePanel>
            <StackPanel Orientation="Vertical" Spacing="10">
                <TextBlock Text="Employee Data" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" Foreground="MediumSpringGreen"/>

                <ListView Name="empListView" Padding="5" BorderBrush="MediumSpringGreen" BorderThickness="2" Foreground="MediumSpringGreen">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Padding="10" Spacing="10">
                                <TextBlock Text="Name" 
                                           Width="150"
                                           FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="Location" 
                                           Width="150"
                                           FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="BirthDate" 
                                           Width="150"
                                           FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="HireDate" 
                                           Width="150"
                                           FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="JobTitle" 
                                            Width="150"
                                            FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="EmailId" 
                                            Width="250"
                                            FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="Salary" 
                                            Width="150"
                                            FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="DeptName" 
                                            Width="150"
                                            FontWeight="Bold"
                                           FontSize="20"/>
                                <TextBlock Text="DeptType" 
                                            Width="150"
                                            FontWeight="Bold"
                                           FontSize="20"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.HeaderTemplate>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:EmpData">
                            <StackPanel Orientation="Horizontal" Padding="10" Spacing="10">
                                <TextBlock
                                    Name="empName"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                    Text="{x:Bind empName}"/>
                                <TextBlock
                                    Name="empLocation"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                    Text="{x:Bind empLocation}"/>
                                <TextBlock
                                    Name="empBirthDate"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                    Text="{x:Bind empBirthDateStr}"/>
                                <TextBlock
                                    Name="empHireDate"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                    Text="{x:Bind empHireDateStr}"/>
                                <TextBlock
                                    Name="empJobTitle"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                    Text="{x:Bind empJobTitle}"/>
                                <TextBlock
                                    Name="empEmailId"
                                    Width="250"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                    Padding="5"
                                    Text="{x:Bind empEmailId}"/>
                                <TextBlock
                                    Name="empSalary"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                    Text="{x:Bind empSalary}"/>
                                <TextBlock
                                    Name="deptName"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    Foreground="MediumSpringGreen"
                                    FontSize="15"
                                    Text="{x:Bind deptName}"/>
                                <TextBlock
                                    Name="deptType"
                                    Width="150"
                                    FontWeight="SemiBold"
                                    FontSize="15"
                                    Foreground="MediumSpringGreen"
                                    Text="{x:Bind deptType}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </RelativePanel>
    </Grid>
    
</Page>
